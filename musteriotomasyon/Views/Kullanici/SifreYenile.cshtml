                                <div class="form-control-feedback">
                                    <i class="icon-mail5 text-muted"></i>
                                </div>
                            </div>
                            <button type="submit" class="btn bg-blue btn-block"><i class="icon-spinner11 mr-2"></i> Şifre sıfırla</button>
                        </div>
                    </div>
                </form>
                <!-- /password recovery form -->
