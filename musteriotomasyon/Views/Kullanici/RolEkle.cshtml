
@{
    ViewBag.Title = "Rol Ekle";
}

<div class="card">
    <div class="card-header header-elements-inline">
        <h6 class="card-title">Rol Tanımla</h6>
        <div class="header-elements">
            <div class="list-icons">
                <a class="list-icons-item" data-action="collapse"></a>
                <a class="list-icons-item" data-action="reload"></a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <form action="/Kullanici/RolEkle" method="post">
            <div class="form-group row">
                <label class="col-form-label col-lg-2">Rol Adı:</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" placeholder="Rol Adı" id="txtName" name="RolAdi">
                </div>
            </div>
            <div class="form-group row mb-0">
                <div class="col-lg-10 ml-lg-auto text-right">
                    <a href="/Kullanici/Roller" class="btn btn-light legitRipple">İptal</a>
                    <button type="submit" class="btn bg-blue ml-3 legitRipple">Kaydet <i class="icon-paperplane ml-2"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>