
@{
    ViewBag.Title = "Anasayfa";
    int say=0;
}
@section head{
    <link href="~/Content/global_assets/css/icons/fontawesome/styles.min.css" rel="stylesheet" type="text/css" />

    <script src="~/Content/global_assets/js/plugins/pickers/daterangepicker.js"></script>
    <script src="~/Content/global_assets/js/plugins/pickers/pickadate/translations/tr_TR.js"></script>
}
<div class="row">
    <div class="col-lg-4">
        <!-- Members online -->
        <div class="card bg-teal-400">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <h1 class="font-weight-semibold mb-0" id="toplam"></h1>
                    <span class="badge bg-teal-800 badge-pill align-self-center ml-auto"></span>
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    TOPLAM SATIŞ
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <i class="fa fa-money fa-4x"></i>
                </div>
            </div>
        </div>
        <!-- /members online -->
    </div>
    <div class="col-lg-4">
        <!-- Current server load -->
        <div class="card bg-pink-400">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <h1 class="font-weight-semibold mb-0">@ViewBag.musteriler</h1>
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    TOPLAM MÜŞTERİLER
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <i class="fa fa-users fa-4x"></i>
                </div>
            </div>
        </div>
        <!-- /current server load -->
    </div>
    <div class="col-lg-4">
        <div class="card bg-blue-400">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <h1 class="font-weight-semibold mb-0">
                        @foreach (musteriOtomasyon.Entity.Servisler sr in ViewBag.Servisler)
                        {
                            if (sr.ServisTarih <= DateTime.Now)
                            {
                                say++;
                            }
                        }
                        @say
                    </h1>
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    YAPILMASI GEREKEN GEÇMİŞ SERVİSLER
                </div>
                <div class="d-flex align-items-center justify-content-center font-size-lg">
                    <i class="fa fa-cogs fa-4x"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header header-elements-sm-inline">
        <h6 class="card-title">Satış İstatistikleri</h6>
        <div class="header-elements">
            <a class="text-default daterange-ranges font-weight-semibold cursor-pointer dropdown-toggle">
                <i class="icon-calendar3 mr-2"></i>
                <input type="text" id="myInputstart" oninput="myFunction()" class="myInputstart">
                <input type="text" id="myInputend" oninput="myFunction()" class="myInputend">
                <input type="hidden" id="myInputstart1" oninput="myFunction()" class="myInputstart1">
                <input type="hidden" id="myInputend1" oninput="myFunction()" class="myInputend1">

            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table text-nowrap" id="satistablo">
            <tbody> </tbody>
        </table>
    </div>
</div>

<script src="~/Content/assets/js/istatistik.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        Satislar();
        myFunction();
    });
</script>


